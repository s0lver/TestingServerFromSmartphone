<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity">

    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Load from file"
            android:id="@+id/btnLoad" android:layout_gravity="center" android:onClick="clickOnLoadFixes"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="171dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:scrollbars="vertical"
            android:id="@+id/txtGpsFixes" android:layout_gravity="center_horizontal"
            android:textSize="8dp" android:editable="false"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create trajectory"
            android:id="@+id/btnCreateTrajectoryInfo" android:layout_gravity="center_horizontal"
            android:onClick="clickOnCreateTrajectory"/>
    <!--<Button-->
            <!--style="?android:attr/buttonStyleSmall"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Process a GPS fix"-->
            <!--android:id="@+id/btnProcessFix" android:layout_gravity="center_horizontal"-->
            <!--android:onClick="clickOnProcessFix"/>-->
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Process GPS fixes"
            android:id="@+id/btnProcessFixes" android:layout_gravity="center_horizontal"
            android:onClick="clickOnProcessFixes"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stay points found"
            android:id="@+id/textView" android:layout_gravity="center_horizontal" android:textStyle="bold"
            android:layout_marginTop="10dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textMultiLine"
            android:ems="10"
            android:textSize="8dp" android:editable="false"
            android:id="@+id/txtStayPointsFound" android:layout_gravity="center_horizontal"
            android:scrollbars="vertical"
    />

</LinearLayout>
